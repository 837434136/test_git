<?xml version="1.0" encoding="utf-8"?>
<!-- view的各种状态(正常无焦点,焦点,onclick按下、放开等等) -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 选中未up时 -->
    <item android:state_pressed="true"><shape>
            <stroke android:width="0.4dp" android:color="@color/white_xx" />
            <!-- 按钮四个圆角       	radius:半径 -->
            <corners android:bottomLeftRadius="7px" android:bottomRightRadius="7px" android:topLeftRadius="7px" android:topRightRadius="7px" />

            <!-- 按钮文字和边缘距离(内边距) -->
            <padding android:bottom="7dp" android:left="30dp" android:right="30dp" android:top="7dp" />
        </shape></item>


    <!-- 无焦点 -->
    <item android:state_pressed="false"><shape>
            <stroke android:width="0.4dp" android:color="@color/blue" />
            <!-- 按钮四个圆角      	radius:半径 -->
            <corners android:bottomLeftRadius="7px" android:bottomRightRadius="7px" android:topLeftRadius="7px" android:topRightRadius="7px" />

            <!-- 按钮文字和边缘距离(内边距) -->
            <padding android:bottom="7dp" android:left="30dp" android:right="30dp" android:top="7dp" />
        </shape></item>

</selector>